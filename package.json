  "bugs": {
    "url": "https://github.com/shumai9/react-boilerplate/issues"
  },
  "homepage": "https://github.com/shumai9/react-boilerplate#readme",
  "dependencies": {
    "express": "^4.16.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "jest": "^23.6.0"
  }
}
